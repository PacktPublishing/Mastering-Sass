{
  "name": "mastering-sass-swag",
  "version": "1.0.0",
  "description": "Front-end for Mastering Sass Swag",
  "main": "gulpfile.js",
  "scripts": {
    "start": "gulp",
    "test": "echo \"Error: no test specified\" && exit 1",
